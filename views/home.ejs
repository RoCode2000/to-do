<% layout("layout/boilerplate")%>
    <div class="container">
        <h1 class="text-center col-md-6 offset-3">To Do App in a Web</h1>
        <div class="card p-2 col-md-6 offset-3">
            <div class="d-inline-flex justify-content-around align-items-center">
                <h3>To-Dos</h3>
                <div class="btn btn-success">
                    <a class="link-light text-decoration-none" href="/new">Add To Do</a>
                </div>
            </div>
            <%for (let toDo of toDos) {%>
                <div class="card my-2">
                    <div class="card-body d-inline-flex justify-content-between align-items-center">
                        <div>
                            <%if (toDo.completed===true) {%>
                                <s>
                                    <%=toDo.toDo%>
                                </s>
                                <%} else {%>
                                    <%=toDo.toDo%>
                                        <%}%>
                        </div>
                        <div>
                            <a href="home/<%=toDo._id%>" class="btn btn-primary">Edit</a>
                            <form class="d-inline" action="home/<%=toDo._id%>?_method=DELETE" method="post">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                <%}%>
        </div>
    </div>