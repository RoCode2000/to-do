<% layout("layout/boilerplate")%>
    <div class="container">
        <div class="row">
            <h1 class="text-center">
                <%=toDo.toDo%>
            </h1>
            <div class="col-6 offset-3 card p-2">
                <form action="/home/<%=toDo._id%>?_method=PUT" method="post">
                    <div class="text-center">
                        <label for="toDoInput" class="form-label">Edit To Do</label>
                        <input type="text" class="form-control" id="toDoInput" value="<%=toDo.toDo%>" name="toDo">
                    </div>
                    <div class="form-check">
                        <label class="form-check-label" for="flexCheckDefault">
                            Completed?
                        </label>
                        <%if (toDo.completed===false) {%>
                            <input class="form-check-input" type="checkbox" value="true" id="flexCheckDefault"
                                name="completed">
                            <%} else {%>
                                <input class="form-check-input" type="checkbox" value="false" id="flexCheckDefault"
                                    name="completed" checked>
                                <%}%>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-info mx-2">Update To Do</button>
                        <a href="/home" class="btn btn-success mx-2">Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>